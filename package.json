{
  "name": "my-text-editor",
  "version": "1.0.0",
  "description": "This project  builds a text editor that runs within the browser, showcasing skills relating to Progressive Web Applications.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "concurrently \"cd server && npm run server\" \"cd client && npm run dev\"",
    "start": "npm run build && cd server && node server.js",
    "server": "cd server nodemon server.js --ignore client",
    "build": "cd client && npm run build",
    "install": "cd client && npm install",
    "client": "cd client && npm start"
  },
  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roxywasiak/my-text-editor.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/roxywasiak/my-text-editor/issues"
  },
  "homepage": "https://github.com/roxywasiak/my-text-editor#readme",
  "devDependencies": {
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "concurrently": "^7.3.0",
    "express": "^4.18.1"
  }
}
